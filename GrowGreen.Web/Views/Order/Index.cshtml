@using GrowGreen.Application.DTOs
@model IEnumerable<OrderDto>

<h1>Orders</h1>
@foreach (var order in Model)
{
    <div>
        <h2>Order #@order.Id</h2>
        <p>Customer: @order.User.Username</p>
        <p>Total Amount: @order.TotalAmount</p>
        <a asp-action="Details" asp-route-id="@order.Id">View Details</a>
    </div>
}
